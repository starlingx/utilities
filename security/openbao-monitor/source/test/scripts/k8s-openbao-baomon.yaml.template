apiVersion: v1
data:
  config.yaml: |
    CACert: "/mnt/data/ca/tls.crt"
    ClientCert: ""
    ClientKey: ""
    logPath: ""
    logLevel: "DEBUG"
    WaitInterval: 5
    Timeout: 10
kind: ConfigMap
metadata:
  name: baomon-cm
  namespace: openbao
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: openbao
  name: stx-openbao-baomon
rules:
- apiGroups: [""] # "" indicates the core API group
  resources: ["pods"]
  verbs: ["get", "watch", "list"]
- apiGroups: [""] # "" indicates the core API group
  resources: ["pods/exec"]
  verbs: ["create"]
- apiGroups: [""] # "" indicates the core API group
  resources: ["secrets"]
  verbs: ["get", "list", "create", "delete"]
- apiGroups: ["batch"]
  resources: ["jobs"]
  verbs: ["get", "create", "delete"]
- apiGroups: [""] # "" indicates the core API group
  resources: ["persistentvolumeclaims"]
  verbs: ["list", "delete"]
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: stx-openbao-baomon
  namespace: openbao
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: stx-openbao-baomon
  namespace: openbao
subjects:
- kind: ServiceAccount
  name: stx-openbao-baomon
roleRef:
  kind: Role
  name: stx-openbao-baomon
  apiGroup: rbac.authorization.k8s.io
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: stx-openbao-baomon
  namespace: openbao
spec:
  serviceName: stx-openbao-baomon
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/instance: stx-openbao
  template:
    metadata:
      labels:
        app.kubernetes.io/name: stx-openbao-baomon
        app.kubernetes.io/instance: stx-openbao
    spec:
      serviceAccountName: "stx-openbao-baomon"
      containers:
        - name: manager
          image: %%IMAGE_REF_TAG%%
          args:
            - bash
            - -c
            - "%%COMMAND%%"
          volumeMounts:
            - name: baomon-cm-vol
              mountPath: /mnt/conf
              readOnly: false
            - name: openbao-ca
              mountPath: /mnt/data/ca
              readOnly: true
      volumes:
        - name: baomon-cm-vol
          configMap:
            name: baomon-cm
        - name: openbao-ca
          secret:
            secretName: openbao-ca
